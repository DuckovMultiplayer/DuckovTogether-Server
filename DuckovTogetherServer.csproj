<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>DuckovTogetherServer</AssemblyName>
    <RootNamespace>DuckovTogether</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AssetsTools.NET" Version="3.0.0-preview8" />
    <PackageReference Include="Mono.Cecil" Version="0.11.5" />
    <PackageReference Include="UnityPy" Version="1.10.18" Condition="false" />
    <Reference Include="LiteNetLib">
      <HintPath>..\Shared\LiteNetLib.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="..\Shared\LiteNetLib.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Link>LiteNetLib.dll</Link>
    </None>
  </ItemGroup>

  <Target Name="CreatePluginsFolder" AfterTargets="Build">
    <MakeDir Directories="$(OutputPath)Plugins" Condition="!Exists('$(OutputPath)Plugins')" />
    <MakeDir Directories="$(OutputPath)Config" Condition="!Exists('$(OutputPath)Config')" />
    <MakeDir Directories="$(OutputPath)Data" Condition="!Exists('$(OutputPath)Data')" />
    <MakeDir Directories="$(OutputPath)Logs" Condition="!Exists('$(OutputPath)Logs')" />
  </Target>

  <ItemGroup>
    <None Include="server_config.json.example">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
